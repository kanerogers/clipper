{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--target-dir",
				"target-bin"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo run",
			"env": {
				"RUST_LOG": "debug",
			}
		},
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"-p",
				"game",
				"test_trivial_serialisation"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "Test ECS deserialisation",
			"env": {
				"RUST_LOG": "debug",
			}
		}
	]
}